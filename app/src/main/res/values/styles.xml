<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
    </style>

    <style name="Heading" parent="AppTheme">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="fontFamily">@font/playfairdisplaybold</item>
    </style>

    <style name="BodyText" parent="AppTheme">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="fontFamily">@font/productsansregular</item>
    </style>

    <style name="Caption" parent="AppTheme">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="fontFamily">@font/productsansregular</item>
    </style>

    <style name="SubmitButtonStyle" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="fontFamily">@font/playfairdisplaybold</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>